{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": false,
        "resolveJsonModule": true,
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "lib": ["es2017"],
        "module": "commonjs",
        "skipLibCheck": false,
        "target": "es2017",
        "baseUrl": "./",
        "paths": {
            "@lib/*": ["./src/lib/*"],
            "@static/*": ["./src/static/*"],
            "@util/*": ["./src/util/*"],
            "@api/*": ["./src/api/*"],
            "@middlewares/*": ["./src/middlewares/*"],
            "@db/*": ["./db/*"],
            "@models/*": ["./db/models/*"],
            "@config/*": ["./config/*"],
            "@src/*": ["./src/*"],
            "@root/*": ["./*"],
            "@test/*": ["./test/*"]
        }
    },
    "include": [
        "./*",
        "./db/**/*",
        "./utils/**/*",
        "./config/*",
        "./config/**/*",
        "./src/**/*",
        "./test/**/*"
    ]
}
