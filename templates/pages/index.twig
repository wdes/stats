{% extends 'basic.twig' %}
{% block title %}Accueil |{{ parent() }}{% endblock %}
{% block body %}
    <div class="container">
        <div class="mt-4">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="col-md-12 text-center">
                        <h1>Wdes-Stats</h1>
                    </div>
                </div>
            </div>
            {% if loggedIn %}
            <div class="card mt-2">
                <div class="card-body">
                    <pre>
                        Number of servers: {{nbrServers}}
                        Number of disabled servers: {{nbrDisabledServers}}
                    </pre>
                </div>
            </div>
            <div class="card mt-2">
                <div class="card-body">
                    <ul>
                        <li><a href="/admin">Admin</a></li>
                        <li><a href="/avgtimes">Average times</a></li>
                        <li><a href="/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
            {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
