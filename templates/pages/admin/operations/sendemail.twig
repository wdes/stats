{% extends 'basic.twig' %}
{% block title %}Administration - Op√©rations - Envoyer un email | {{ parent() }}
{% endblock %}
{% block body %}
    <div class="col-md-12">
        <form method="POST" action="/admin/operations/sendemail">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="true" id="sentToStack" name="sentToStack">
                <label class="form-check-label" for="sentToStack">
                    Envoyer dans la pile d'attente
                </label>
            </div>
            <div class="form-group">
                <label for="textToSend">Texte</label>
                <textarea class="form-control" id="textToSend" name="textToSend" rows="3"></textarea>
            </div>
            <button class="btn btn-primary" type="submit">Envoyer !</button>
        </form>
    </div>
{% endblock %}

